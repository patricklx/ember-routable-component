{
  "extends": "@tsconfig/ember/tsconfig.json",
  "include": [
    "src/**/*",
    "ember.d.ts",
    "unpublished-development-types/**/*"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  },
  "compilerOptions": {
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "declarationDir": "declarations"
  }
}
